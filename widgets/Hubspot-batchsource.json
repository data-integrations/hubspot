{
  "metadata": {
    "spec-version": "1.5"
  },
  "configuration-groups": [
    {
      "label": "Authorization",
      "properties": [
        {
          "name": "authorizationMethod",
          "label": "Authorization method",
          "widget-type": "select",
          "widget-attributes": {
            "values": [
              "API Key",
              "Private App Access Token"
            ]
          }
        },
        {
          "widget-type": "securekey-text",
          "label": "API Key",
          "name": "apiKey"
        },
        {
          "widget-type": "securekey-text",
          "label": "Private App Access Token",
          "name": "accessToken"
        },
        {
          "widget-type" : "hidden",
          "label": "OAuth Information",
          "name": "oAuthInfo"
        }
      ]
    },
    {
      "label": "Common properties",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Reference Name",
          "name": "referenceName"
        },
        {
          "widget-type": "hidden",
          "name": "apiServerUrl"
        },
        {
          "name": "objectType",
          "label": "Objects",
          "widget-type": "select",
          "widget-attributes": {
            "values": [
              "Analytics",
              "Companies",
              "Contact Lists",
              "Contacts",
              "Deal Pipelines",
              "Deals",
              "Email Events",
              "Email Subscription",
              "Marketing Email",
              "Products",
              "Recently Modified Companies",
              "Tickets"
            ]
          }
        },
        {
          "widget-type": "get-schema",
          "widget-category": "plugin"
        }
      ]
    },
    {
      "label": "Analytics",
      "properties": [
        {
          "name": "timePeriod",
          "label": "Time Period",
          "widget-type": "select",
          "widget-attributes": {
            "values": [
              "total",
              "daily",
              "weekly",
              "monthly",
              "summarize/daily",
              "summarize/weekly",
              "summarize/monthly"
            ]
          }
        },
        {
          "name": "reportType",
          "label": "Report Type",
          "widget-type": "select",
          "widget-attributes": {
            "default": "Category",
            "values": [
              "Content",
              "Category",
              "Object"
            ]
          }
        },
        {
          "name": "reportContent",
          "label": "Report Content",
          "widget-type": "select",
          "widget-attributes": {
            "values": [
              "landing-pages",
              "standard-pages",
              "blog-posts",
              "listing-pages",
              "knowledge-articles"
            ]
          }
        },
        {
          "name": "reportCategory",
          "label": "Report Category",
          "widget-type": "select",
          "widget-attributes": {
            "default": "totals",
            "values": [
              "totals",
              "sessions",
              "sources",
              "geolocation",
              "utm-campaigns",
              "utm-contents",
              "utm-mediums",
              "utm-sources",
              "utm-terms"
            ]
          }
        },
        {
          "name": "reportObject",
          "label": "Report Object",
          "widget-type": "select",
          "widget-attributes": {
            "values": [
              "event-completions",
              "forms",
              "pages",
              "social-assists"
            ]
          }
        },
        {
          "widget-type": "textbox",
          "label": "Start Date",
          "name": "startDate",
          "widget-attributes" : {
            "placeholder": "YYYYMMDD format."
          }
        },
        {
          "widget-type": "textbox",
          "label": "End Date",
          "name": "endDate",
          "widget-attributes" : {
            "placeholder": "YYYYMMDD format."
          }
        },
        {
          "name": "filters",
          "label": "Filters",
          "widget-type": "dsv",
          "widget-attributes": {
            "delimiter": ","
          }
        }
      ]
    }
  ],
  "filters": [
    {
      "name": "Select API Key",
      "condition": {
        "expression": "authorizationMethod == 'API Key'"
      },
      "show": [
        {
          "name": "apiKey",
          "type": "property"
        }
      ]
    },
    {
      "name": "Select Private App Access Token",
      "condition": {
        "expression": "authorizationMethod == 'Private App Access Token'"
      },
      "show": [
        {
          "name": "accessToken",
          "type": "property"
        }
      ]
    },
    {
      "name": "Select Analytics properties",
      "condition": {
        "expression": "objectType == 'Analytics'"
      },
      "show": [
        {
          "name": "timePeriod",
          "type": "property"
        },
        {
          "name": "reportType",
          "type": "property"
        },
        {
          "name": "startDate",
          "type": "property"
        },
        {
          "name": "endDate",
          "type": "property"
        },
        {
          "name": "filters",
          "type": "property"
        }
      ]
    },
    {
      "name": "Report Type Content",
      "condition": {
        "expression": "objectType == 'Analytics' && reportType == 'Content'"
      },
      "show": [
        {
          "name": "reportContent",
          "type": "property"
        }
      ]
    },
    {
      "name": "Report Type Category",
      "condition": {
        "expression": "objectType == 'Analytics' && reportType == 'Category'"
      },
      "show": [
        {
          "name": "reportCategory",
          "type": "property"
        }
      ]
    },
    {
      "name": "Report Type Object",
      "condition": {
        "expression": "objectType == 'Analytics' && reportType == 'Object'"
      },
      "show": [
        {
          "name": "reportObject",
          "type": "property"
        }
      ]
    }
  ]
}
